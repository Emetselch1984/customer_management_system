
<% @title = "ログイン" %>
<div id="login-form">
  <h1><%= @title %></h1>
  <%= form_with model: @form, url: customer_login_path,local: true do |f| %>
    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "ログイン" %>
    </div>
    <div>
      <%= f.check_box :remember  %>
      <%= f.label :remember,"次回から自動でログインする" %>
    </div>
<!--    <div>-->
      <%#= check_box_tag :remember, params[:remember], true %>
      <%#= label_tag :remember %>
<!--    </div>-->
  <% end %>
</div>
