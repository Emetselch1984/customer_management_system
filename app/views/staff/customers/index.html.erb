<% @title = "顧客管理" %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
    <%= link_to "新規登録", new_staff_customer_path %>
  </div>

  <%= render "search_form" %>

  <%= paginate @customers %>

  <table class="listing">
    <tr>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>メールアドレス</th>
      <th>生年月日</th>
      <th>性別</th>
      <th>アクション</th>
    </tr>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.decorate.full_name %></td>
        <td><%= c.decorate.full_name_kana %></td>
        <td class="email"><%= c.email %></td>
        <td class="date"><%= c.decorate.birthday %></td>
        <td><%= c.decorate.gender %></td>
        <td class="actions">
          <%= link_to "詳細", staff_customer_path(c) %> |
          <%= link_to "編集", edit_staff_customer_path(c) %> |
          <%= link_to "削除", staff_customer_path(c), method: :delete,
            data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @customers %>

  <div class="links">
    <%= link_to "新規登録", new_staff_customer_path %>
  </div>
</div>
